<Details>:
    id: details
    orientation: 'vertical'
    details: details.__self__
    detailToolbar: detailToolbar
    year: year
    addYearButton: addYearButton.__self__
    paie_tab: paie_tab
    MDToolbar:
        id: detailToolbar
        title: 'John Doe'
        elevation: 10
        pos_hint: {"top": 1}
        left_action_items: [['arrow-left-circle', lambda x: app.backToHome()]]
        right_action_items: [['calendar', lambda x: root.show_date_picker()]]

    MDSwiper:
        items_spacing: '0dp'
        MDSwiperItem:
            MDBoxLayout:
                orientation: 'vertical'
                adaptive_height: True
                pos_hint: {'top': 0.8}

                MDBoxLayout:
                    orientation: 'vertical'
                    adaptive_height: True
                    MDBoxLayout:
                        id: paie_tab
                        orientation: 'horizontal'
                        padding: '38dp'
                        spacing: '38dp'
                        MDLabel:
                            id: year
                            halign: "center"
                            font_style: "H5"
                        MDFillRoundFlatIconButton:
                            id: addYearButton
                            icon: 'plus'
                            text: 'Ajouter'
                            font_size: dp(24)
                            on_press: root.addNewYear()

                    PaiementRowMonth:
                        PaiementInput:
                            id: janvier
                            hint_text: "Janvier"
                            on_text: root.updatePaiement(root.year.text, "janvier", self.text)
                            on_text: root.updateSomme(year.text)
                        PaiementInput:
                            id: fevrier
                            hint_text: "Février"
                            on_text: root.updatePaiement(root.year.text, "fevrier", self.text)
                            on_text: root.updateSomme(year.text)
                        PaiementInput:
                            id: mars
                            hint_text: "Mars"
                            on_text: root.updatePaiement(root.year.text, "mars", self.text)
                            on_text: root.updateSomme(year.text)
                        PaiementInput:
                            id: avril
                            hint_text: "Avril"
                            on_text: root.updatePaiement(root.year.text, "avril", self.text)
                            on_text: root.updateSomme(year.text)
                    PaiementRowMonth:
                        PaiementInput:
                            id: mai
                            hint_text: "Mai"
                            on_text: root.updatePaiement(root.year.text, "mai", self.text)
                            on_text: root.updateSomme(year.text)
                        PaiementInput:
                            id: juin
                            hint_text: "Juin"
                            on_text: root.updatePaiement(root.year.text, "juin", self.text)
                            on_text: root.updateSomme(year.text)
                        PaiementInput:
                            id: juillet
                            hint_text: "Juillet"
                            on_text: root.updatePaiement(root.year.text, "juillet", self.text)
                            on_text: root.updateSomme(year.text)
                        PaiementInput:
                            id: aout
                            hint_text: "Aout"
                            on_text: root.updatePaiement(root.year.text, "aout", self.text)
                            on_text: root.updateSomme(year.text)
                    PaiementRowMonth:
                        PaiementInput:
                            id: septembre
                            hint_text: "Septembre"
                            on_text: root.updatePaiement(root.year.text, "septembre", self.text)
                            on_text: root.updateSomme(year.text)
                        PaiementInput:
                            id: octobre
                            hint_text: "Octobre"
                            on_text: root.updatePaiement(root.year.text, "octobre", self.text)
                            on_text: root.updateSomme(year.text)
                        PaiementInput:
                            id: novembre
                            hint_text: "Novembre"
                            on_text: root.updatePaiement(root.year.text, "novembre", self.text)
                            on_text: root.updateSomme(year.text)
                        PaiementInput:
                            id: decembre
                            hint_text: "Décembre"
                            on_text: root.updatePaiement(root.year.text, "decembre", self.text)
                            on_text: root.updateSomme(year.text)
                    MDBoxLayout:
                        orientation: "horizontal"
                        spacing: '38dp'
                        InfosLabel:
                            id: total_paiement

        MDSwiperItem:
            MDBoxLayout:
                orientation: "vertical"
                padding: '24dp'
                adaptive_height: True
                pos_hint: {'top': 0.5}
                InfosLabel:
                    id: dUserName
                    theme_text_color: "Primary"
                    font_style: "H4"
                UpdateInput:
                    id: detteMontant
                    hint_text: "Montant"
                    max_text_length: 6
                    icon_right: 'currency-usd'
                    icon_right_color: app.theme_cls.primary_color
                InfosLabel:
                    id: detteInfos
                    markup: True
            MDBoxLayout:
                orientation: 'horizontal'
                #adaptive_width: True
                spacing: '19dp'
                MDFillRoundFlatIconButton:
                    text: "Accorder"
                    icon: 'check'
                    font_size: "24dp"
                    md_bg_color: app.theme_cls.primary_color
                    on_press: root.setDette(idForDette.text)
                MDFillRoundFlatIconButton:
                    text: "Annuler"
                    icon: 'cancel'
                    font_size: "24dp"
                    md_bg_color: (1, 0, 0, 1)
                    on_press: root.clearDette()