<Details>:
    id: details
    orientation: 'vertical'
    details: details.__self__
    detailToolbar: detailToolbar
    year: year
    addYearButton: addYearButton.__self__
    paie_tab: paie_tab
    detteMontant: detteMontant
    listDette: listDette.__self__
    MDToolbar:
        id: detailToolbar
        title: 'John Doe'
        elevation: 10
        pos_hint: {"top": 1}
        left_action_items: [['arrow-left-circle', lambda x: app.backToHome()]]
        right_action_items: [['calendar', lambda x: root.show_date_picker()]]

    MDSwiper:
        items_spacing: '0dp'
        on_swipe: root.getEmployeesDetteList()
        MDSwiperItem:
            MDBoxLayout:
                orientation: 'vertical'
                adaptive_height: True
                pos_hint: {'top': 0.8}

                MDBoxLayout:
                    orientation: 'vertical'
                    adaptive_height: True
                    MDBoxLayout:
                        id: paie_tab
                        orientation: 'horizontal'
                        padding: '38dp'
                        spacing: '38dp'
                        MDLabel:
                            id: year
                            halign: "center"
                            font_style: "H5"
                        MDFillRoundFlatIconButton:
                            id: addYearButton
                            icon: 'plus'
                            text: 'Ajouter'
                            font_size: dp(24)
                            on_press: root.addNewYear()

                    PaiementRowMonth:
                        PaiementInput:
                            id: janvier
                            hint_text: "Janvier"
                            on_text: root.updatePaiement(root.year.text, "janvier", self.text)
                            on_text: root.updateSomme(year.text)
                        PaiementInput:
                            id: fevrier
                            hint_text: "Février"
                            on_text: root.updatePaiement(root.year.text, "fevrier", self.text)
                            on_text: root.updateSomme(year.text)
                        PaiementInput:
                            id: mars
                            hint_text: "Mars"
                            on_text: root.updatePaiement(root.year.text, "mars", self.text)
                            on_text: root.updateSomme(year.text)
                        PaiementInput:
                            id: avril
                            hint_text: "Avril"
                            on_text: root.updatePaiement(root.year.text, "avril", self.text)
                            on_text: root.updateSomme(year.text)
                    PaiementRowMonth:
                        PaiementInput:
                            id: mai
                            hint_text: "Mai"
                            on_text: root.updatePaiement(root.year.text, "mai", self.text)
                            on_text: root.updateSomme(year.text)
                        PaiementInput:
                            id: juin
                            hint_text: "Juin"
                            on_text: root.updatePaiement(root.year.text, "juin", self.text)
                            on_text: root.updateSomme(year.text)
                        PaiementInput:
                            id: juillet
                            hint_text: "Juillet"
                            on_text: root.updatePaiement(root.year.text, "juillet", self.text)
                            on_text: root.updateSomme(year.text)
                        PaiementInput:
                            id: aout
                            hint_text: "Aout"
                            on_text: root.updatePaiement(root.year.text, "aout", self.text)
                            on_text: root.updateSomme(year.text)
                    PaiementRowMonth:
                        PaiementInput:
                            id: septembre
                            hint_text: "Septembre"
                            on_text: root.updatePaiement(root.year.text, "septembre", self.text)
                            on_text: root.updateSomme(year.text)
                        PaiementInput:
                            id: octobre
                            hint_text: "Octobre"
                            on_text: root.updatePaiement(root.year.text, "octobre", self.text)
                            on_text: root.updateSomme(year.text)
                        PaiementInput:
                            id: novembre
                            hint_text: "Novembre"
                            on_text: root.updatePaiement(root.year.text, "novembre", self.text)
                            on_text: root.updateSomme(year.text)
                        PaiementInput:
                            id: decembre
                            hint_text: "Décembre"
                            on_text: root.updatePaiement(root.year.text, "decembre", self.text)
                            on_text: root.updateSomme(year.text)
                    MDBoxLayout:
                        orientation: "horizontal"
                        spacing: '38dp'
                        InfosLabel:
                            id: total_paiement

        MDSwiperItem:
            MDBoxLayout:
                orientation: "vertical"
                adaptive_height: True
                pos_hint: {'top': 1}
                MDBoxLayout:
                    orientation: "vertical"
                    adaptive_height: True
                    padding: '24dp'
                    InfosLabel:
                        id: dUserName
                        theme_text_color: "Primary"
                        font_style: "H4"
                    UpdateInput:
                        id: detteMontant
                        hint_text: "Montant"
                        max_text_length: 6
                        icon_right: 'currency-usd'
                        icon_right_color: app.theme_cls.primary_color
                    InfosLabel:
                        id: detteInfos
                        markup: True
                MDBoxLayout:
                    orientation: 'horizontal'
                    adaptive_height: True
                    adaptive_width: True
                    spacing: '19dp'
                    pos_hint: {'center_x': 0.5}
                    MDFillRoundFlatIconButton:
                        text: 'Accorder'
                        icon: 'check'
                        font_size: "24dp"
                        md_bg_color: app.theme_cls.primary_color
                        on_press: root.setDette(root.detteMontant.text)
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    MDFillRoundFlatIconButton:
                        text: 'Annuler'
                        icon: 'cancel'
                        font_size: '24dp'
                        md_bg_color: (1, 0, 0, 1)
                        on_press: root.clearDette()
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                MDBoxLayout:
                    orientation: 'vertical'
                    adaptive_height: True
                    height: (root.height*.60)
                    padding: '24dp'
                    ScrollView:
                        MDList:
                            id: listDette
        MDSwiperItem:
            MDBoxLayout:
                orientation: "vertical"
                #adaptive_height: True
                UpdateGrid:
                    UpdateInput:
                        id: updatePrenom
                        hint_text: "Prénom"
                        max_text_length: 13
                    UpdateInput:
                        id: updateDateDebut
                        hint_text: "Date de debut"
                        icon_right: 'calendar'
                        icon_right_color: app.theme_cls.primary_color
                        on_focus: root.shooseStartDate()
                UpdateGrid:
                    UpdateInput:
                        id: updateSurnom
                        hint_text: "Surnom"
                        max_text_length: 13
                    UpdateInput:
                        id: updatePrenomTuteur
                        hint_text: "Prénom du tuteur"
                        max_text_length: 13
                UpdateGrid:
                    UpdateInput:
                        id: updateNom
                        hint_text: "Nom"
                        max_text_length: 13
                    UpdateInput:
                        id: updateNomTutuer
                        hint_text: "Nom du tuteur"
                        max_text_length: 13
                UpdateGrid:
                    UpdateInput:
                        id: updateDateEntrer
                        hint_text: "Date d'entrer"
                        icon_right: 'calendar'
                        icon_right_color: app.theme_cls.primary_color
                        on_focus: root.shooseEnterDate()
                    UpdateInput:
                        id: updateTuteurContact
                        hint_text: "Contact du tuteur"
                        icon_right: 'phone'
                        icon_right_color: app.theme_cls.primary_color
                        max_text_length: 13
                UpdateGrid:
                    UpdateInput:
                        id: updateSalaire
                        hint_text: "Salaire"
                        icon_right: 'currency-eur'
                        icon_right_color: app.theme_cls.primary_color
                        max_text_length: 6
                    UpdateInput:
                        id: updateAdressTuteur
                        hint_text: "Adresse du tuteur"
                        icon_right: 'google-maps'
                        icon_right_color: app.theme_cls.primary_color
                        max_text_length: 13
                MDBoxLayout:
                    orientation: "vertical"
                    InfosLabel:
                        id: updateInfos

                AnchorLayout:
                    anchor_x: 'center'
                    anchor_y: 'bottom'
                    padding: '19dp'
                    MDBoxLayout:
                        orientation: 'horizontal'
                        adaptive_width: True
                        spacing: '19dp'
                        MDFillRoundFlatIconButton:
                            text: "Mettre à jour"
                            icon: 'check'
                            font_size: "24dp"
                            md_bg_color: app.theme_cls.primary_color
                            on_release: root.set_update()
                        MDFillRoundFlatIconButton:
                            text: "Annuler"
                            icon: 'cancel'
                            font_size: "24dp"
                            md_bg_color: (1, 0, 0, 1)
                            on_release: root.get_user_details()